<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realworldproject.group03.rashhour.treatment_keratosis">

    <TextView
        android:id="@+id/rash_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keratosis"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/treatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="@string/treatment"
        android:textSize="18sp"
        android:layout_below="@+id/rash_type"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/keratosis_treatment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/treatment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="33dp"
        android:textAlignment="center"
        android:text="@string/keratosis_treatment1" />

    <TextView
        android:id="@+id/eczema_treatment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/keratosis_treatment2"
        android:layout_below="@+id/keratosis_treatment1"
        android:layout_alignStart="@+id/keratosis_treatment1"
        android:layout_alignEnd="@id/keratosis_treatment1" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:text="@string/home" />

</RelativeLayout>
